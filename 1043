#include <stdlib.h>
#include <stdio.h>


int main () {

	double a, b, c, per, are;
	
scanf("%lf %lf %lf", &a, &b, &c);

if ( (abs(b-c)<a && a<(b+c)) or (abs(a-c)<b && b<(a+c)) or (abs(a-b)<c && c<(a+b)))
{
	per=a+b+c;
	printf("Perimetro = %.1lf\n", per);
	return 0;
}
	else 
	{
		are=(((a+b)*c)/2);
		printf("Area = %.1lf\n", are);
	}
return 0;
}
